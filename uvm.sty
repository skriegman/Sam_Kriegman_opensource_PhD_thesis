% ===========================================
% Set up title environment
% ===========================================
\renewcommand\maketitle{%
    \thispagestyle{empty}
    \null%
    %\vskip 2em
    \begin{center}
        {\LARGE \sc \@title \par}
        \vskip 2em
        \doublespacing
        {
            \@thesistype\ Presented\\
	\vskip 2em
            by\\
            \@author\\
            to\\
            The Faculty of the Graduate College\\
            of\\
            The University of Vermont\\
            \vskip 2em
            \singlespacing
            In Partial Fulfillment of the Requirements\\
            for the Degree of \@degreetype\\
            Specializing in \@spectype\\
            \vskip 1em
            \@gradmonth, 2020\par  %\number\year\par
        }
    \end{center} \par

	\vskip 2em
    	\begin{flushright}
	\singlespacing
	 Defense Date: \@defensedate\\
	 Dissertation Examination Committee:\\
	\vskip 1em
	\@advisor, Advisor\\
	\@chair, Chairperson\\
	\@readerone\\
	\@readertwo\\
	\@dean, Dean of Graduate College\\
	\end{flushright}

    \newpage
}

